apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: default-http-backend
  namespace: <%= @namespace %>
  labels:
    addonmanager.kubernetes.io/mode: Reconcile
spec:
<% if @replicas -%>
  replicas: <%= @replicas %>
<% end -%>
  template:
    metadata:
      labels:
        app: default-http-backend
    spec:
      terminationGracePeriodSeconds: 60
      containers:
      - name: default-http-backend
        # Any image is permissable as long as:
        # 1. It serves a 404 page at /
        # 2. It serves 200 on a /healthz endpoint
        image: <%= @image %>:<%= @version %>
        livenessProbe:
          httpGet:
            path: /healthz
            port: 8080
            scheme: HTTP
          initialDelaySeconds: 30
          timeoutSeconds: 5
        ports:
        - containerPort: 8080
        resources:
          limits:
            cpu: <%= @limit_cpu %>
            memory: <%= @limit_mem %>
          requests:
            cpu: <%= @request_cpu %>
            memory: <%= @request_mem %>
