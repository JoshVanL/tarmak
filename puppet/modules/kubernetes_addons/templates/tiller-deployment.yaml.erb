<% if @version_before_1_9 -%>
apiVersion: extensions/v1beta1
<% else -%>
apiVersion: apps/v1
<% end -%>
kind: Deployment
metadata:
  labels:
    app: helm
    name: tiller
    addonmanager.kubernetes.io/mode: Reconcile
  name: tiller-deploy
  namespace: <%= @namespace %>
spec:
  replicas: 1
  selector:
    matchLabels:
      app: helm
      name: tiller
  template:
    metadata:
      labels:
        app: helm
        name: tiller
    spec:
<%- if @rbac_enabled -%>
      serviceAccountName: tiller
<%- end -%>
      containers:
      - image: <%= @image %>:v<%= @version %>
        args:
        - /tiller
        - --listen=localhost:44134
        imagePullPolicy: IfNotPresent
        livenessProbe:
          httpGet:
            path: /liveness
            port: 44135
          initialDelaySeconds: 1
          timeoutSeconds: 1
        name: tiller
        ports:
        - containerPort: 44134
          name: tiller
        readinessProbe:
          httpGet:
            path: /readiness
            port: 44135
          initialDelaySeconds: 1
          timeoutSeconds: 1
<%- if @rbac_enabled -%>
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: tiller
  namespace: <%= @namespace %>
---
<% if @version_before_1_6 -%>
apiVersion: rbac.authorization.k8s.io/v1alpha1
<% elsif @version_before_1_8 -%>
apiVersion: rbac.authorization.k8s.io/v1beta1
<% else -%>
apiVersion: rbac.authorization.k8s.io/v1
<% end -%>
kind: ClusterRoleBinding
metadata:
  name: tiller
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
  - kind: ServiceAccount
    name: tiller
    namespace: <%= @namespace %>
<%- end -%>
