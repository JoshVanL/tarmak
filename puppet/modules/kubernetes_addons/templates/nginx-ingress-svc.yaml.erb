apiVersion: v1
kind: Service
metadata:
  labels:
    name: <%= @deployment_name %>
    addonmanager.kubernetes.io/mode: Reconcile
  name: <%= @deployment_name %>
  namespace: <%= @namespace %>
spec:
  ports:
  - name: http
    port: 80
    protocol: TCP
    targetPort: 80
  - name: https
    port: 443
    protocol: TCP
    targetPort: 443
  - name: node
    port: 3000
    protocol: TCP
    targetPort: 3000
  - name: java-etc
    port: 8080
    protocol: TCP
    targetPort: 8080
  selector:
    name: <%= @deployment_name %>
  sessionAffinity: None
  type: LoadBalancer
