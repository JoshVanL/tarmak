apiVersion: v1
kind: Service
metadata:
  name: elasticsearch-logging
  namespace: <%= @namespace %>
  labels:
    k8s-app: elasticsearch-logging
    kubernetes.io/cluster-service: "true"
    kubernetes.io/name: elasticsearch-logging
    addonmanager.kubernetes.io/mode: EnsureExists
spec:
  ports:
  - port: 9200
    protocol: TCP
    targetPort: db
<% if @node_port != 0 -%>
    nodePort: <%= @node_port %>
  type: NodePort
<% end -%>
  selector:
    k8s-app: elasticsearch-logging
