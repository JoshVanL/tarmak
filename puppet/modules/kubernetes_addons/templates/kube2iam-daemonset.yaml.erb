apiVersion: extensions/v1beta1
kind: DaemonSet
metadata:
  name: kube2iam
  namespace: kube-system
  labels:
    k8s-app: kube2iam
    addonmanager.kubernetes.io/mode: Reconcile
spec:
  template:
    metadata:
      labels:
        k8s-app: kube2iam
    spec:
<%- unless @version_before_1_6 -%>
      updateStrategy: RollingUpdate
<%- end -%>
<%- if @rbac_enabled -%>
      serviceAccountName: kube2iam
<%- end -%>
      containers:
      - name: kube2iam
        image: <%= @image %>:<%= @version %>
<%- if @base_role_arn != '' -%>
        args:
        - "--base-role-arn=<%= @base_role_arn %>"
<%- end -%>
        env:
        - name: HOST_IP
          valueFrom:
            fieldRef:
              fieldPath: status.podIP
        ports:
        - containerPort: 8181
          hostPort: 8181
        resources:
          limits:
            cpu: "<%= @limit_cpu %>"
            memory: "<%= @limit_mem %>"
          requests:
            cpu: "<%= @request_cpu %>"
            memory: "<%= @request_mem %>"
